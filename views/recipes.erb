<h2>Recipes</h2>
<hr>
<br>

<% if @recipes == [] %>

<p>There are currently no recipes in the database</p>

<% else %>

<p>Current Recipes</p>
<ul>

  <% @recipes.each() do |recipe| %>

  <li><a href="/recipes/<%= recipe.id() %>"><%= recipe.recipe_name() %></a></li>

  <% end %>

</ul>

<% end %>
<h3> Add a recipe: </h3>
<form action="/recipes" method="post">
  <label for="recipe_name">Recipe Name:  </label>
  <input type="text" name="recipe_name" id="recipe_name">
  <label for="instructions">Instructions:  </label>
  <input type="text" name="instructions" id="instructions">
  <button type="submit">Add Recipe</button>
</form>

<table class="table">
  <tr>
    <th>Recipe Name</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
  <% if @recipes %>
  <% @recipes.each do |recipe| %>
  <tr>
    <td><a href="/recipes/<%= recipe.id %>"><%= recipe.recipe_name %></a></td>
    <td><a href="/recipes/<%= recipe.id %>/edit">Edit</a></td>
    <td><a href="/recipes/<%= recipe.id %>/delete">Delete</a></td>
  </tr>
  <% end %>
  <% end %>
</table>
